/* pages/profil/profil.wxss */
/* Styles pour l'en-tête */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* Style pour l'icône de retour */
.back-icon {
  width: 50rpx;
  height: 50rpx;
}

/* Style pour le conteneur de défilement */
.scroll-view {
  width: 100%;
  height: calc(100vh - 100rpx);
  margin: 0 auto;
}

/* Style pour le conteneur du profil */
.profile-container {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Style pour l'image de profil */
.profile-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin-bottom: 20rpx;
}

/* Style pour le nom de l'utilisateur */
.profile-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* Style pour l'icône de l'appareil */
.device-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

/* Style pour le conteneur d'évaluation */
.rating-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

/* Style pour le texte de l'évaluation */
.rating-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 10rpx;
}

/* Style pour les icônes d'étoiles */
.star-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;

}

/* Style pour le bouton de modification de profil */
.edit-profile-btn {
  width: 300rpx;
  height: 80rpx;
  background: #FF7900;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.edit-profile-btn text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/* Style pour les titres de section */
.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 40rpx 0 20rpx 0;
  align-self: flex-start;
}

/* Style pour les conteneurs de section */
.section-container {
  width: 100%;
  background: #f5f5f5;
  border-radius: 20rpx;
  overflow: hidden;
}

/* Style pour les lignes d'éléments */
.item-row {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  transition: background-color 0.2s;

}

.item-row:hover {
  background: #f0f0f0;
}

/* Style pour les icônes des éléments */
.item-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

/* Style pour le texte des éléments */
.item-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

/* Style pour l'icône de flèche */
.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

/* Style pour la case à cocher */
.toggle-switch {
  transform: scale(1.2);
}

/* Style pour les séparateurs */
.separator {
  height: 2rpx;
  background: #e0e0e0;
  margin: 0 24rpx;
}

/* Styles pour le modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-show {
  opacity: 1;
  visibility: visible;
  transition: opacity 0.3s;
}

.modal-hide {
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  width: 600rpx;
  position: relative;
}

.modal-close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.form-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.form-button {
  background: #FF7900;
  color: #fff;
  border-radius: 20rpx;
  padding: 18rpx;
  font-size: 28rpx;
  text-align: center;
}

.save-btn {
  background: #FF7900;
  color: #fff;
  border-radius: 20rpx;
  padding: 18rpx;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.image-button-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.modal-profile-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx; 
  object-fit: cover;
}