page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }
  
  
  .hero-section {
    background-color: #fff;
    padding: 40rpx 20rpx;
    text-align: center;
    border-bottom: 1rpx solid #e0e0e0;
    margin-bottom: 30rpx;
  }
  
  .hero-title {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .hero-subtitle {
    font-size: 32rpx;
    color: #666;
  }
  
  .scrollarea {
    flex: 1;
    overflow-y: auto;
  }
  
  .content-container {
    display: flex;
    flex-direction: column;
    gap: 40rpx;
    padding-bottom: 40rpx;
  }
  
  .section {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #ff8700;
    margin-bottom: 20rpx;
    text-align: center;
  }
  
  .section-content {
    width: 88%;
    max-width: 700rpx;
    padding: 20rpx;
    background-color: #fff;
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    font-size: 28rpx;
    line-height: 44rpx;
    color: #444;
    text-align: justify;
  }
  
  .contact-section .section-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10rpx;
    font-size: 28rpx;
    color: #444;
  }
  
  .contact-button {
    background-color: #ff8700;
    color: #fff;
    padding: 20rpx 40rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    font-weight: bold;
    text-align: center;
    margin-top: 20rpx;
    transition: background-color 0.2s ease-in-out;
  }
  
  .contact-button:hover {
    background-color: #ff6200;
  }