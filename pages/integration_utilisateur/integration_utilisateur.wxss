/* Style global de la page */
page {
    height: 100vh;
    font-family: 'Times New Roman', Times, serif;
} 

/* Style du conteneur principal avec d√©filement */
.integrer {
    flex: 1;
    overflow-y: auto;
    width: 100%;
    max-width: 750rpx;
    height: calc(100vh - 190rpx);
    margin: 0 auto;
    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* Style du premier conteneur */
.conteneur_premier {
    width: 95%;
    max-width: 710rpx;
    min-height: 400rpx;
    border-radius: 16rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    animation: cardFloat 1s ease-out;
}

/* Style du bouton principal */
.bouton {
    width: 300rpx;
    height: 75rpx;
    background-color: #F16E00;
    color: #ffffff;
    border-radius: 18rpx;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20rpx auto;
}

.bouton:hover {
    background: linear-gradient(135deg, #e66b00, #F16E00);
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 16rpx rgba(255, 121, 0, 0.4);
}

.bouton:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(255, 121, 0, 0.2);
}

/* Style de la section description */
.description {
    width: 100%;
    font-size: 36rpx;
    font-weight: 500;
    margin: 20rpx 0;
}

/* Style du texte de description */
.description_text {
    width: 100%;
    font-size: 28rpx;
    line-height: 1.6;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.description_text.collapsed {
    max-height: 120rpx;
    overflow: hidden;
    position: relative;
}

.description_text.collapsed::after {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60rpx;
}

.description_text.expanded {
    max-height: none;
    height: auto;
}

/* Style du bouton "voir plus" */
.voir_plus {
    color: #F16E00;
    font-size: 28rpx;
    font-weight: 500;
    padding: 10rpx 20rpx;
    transition: all 0.3s ease;
  
 
   
}

.voir_plus:active {
    transform: scale(0.98);
}

/* Style du second conteneur */
.conteneur_second {
    width: 100%;
    max-width: 710rpx;
    margin:0 auto;
    background: #ffffff;
    border-top:1rpx solid #F16E00;
    display: flex;
    flex-direction: column;
    
}

/* Style de la section avis */
.Avis {
    width: 100%;
    font-size: 36rpx;
    font-weight: 500;
    margin: 15rpx;
}

/* Style de chaque avis */
.Avis_view {
    width: 100%;
    max-width: 670rpx;
    min-height: 150rpx;
    border-radius: 12rpx;
    margin: 15rpx auto;
    padding: 10rpx;
    box-shadow: 0 2rpx 8rpx #f16c00a9;
    transition: all 0.3s ease-in-out;
}

/* Style de l'ensemble avatar, nom, note */
.ensemble {
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 15rpx;
}

.ensemble .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.ensemble .avatar:hover {
    transform: scale(1.05);
}

.nom {
    font-size: 32rpx;
    font-weight: 400;
}

/* Style de la description des avis */
.description_avis {
    width: 100%;
    font-size: 28rpx;
    color: #000000;
    line-height: 1.6;
}

.truncated-text {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
    text-align: justify;
}

.full-text {
    display: block;
    text-align: justify;
}

/* Style du bouton "voir plus" pour les avis */
.voir_plus_avis {
    color: #F16E00;
    font-size: 26rpx;
    font-weight: 500;
    padding: 8rpx 16rpx;
    border-radius: 12rpx;
    margin-top: 10rpx;
    transition: all 0.3s ease;
}

/* Animations */
@keyframes cardFloat {
    from { opacity: 0; transform: translateY(20rpx); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-20rpx); }
    to { opacity: 1; transform: translateX(0); }
}

@keyframes expandTextSmooth {
    from { max-height: 0; opacity: 0.8; }
    to { max-height: 1000rpx; opacity: 1; }
}

/* Modal styles (unchanged) */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: fadeIn 0.3s ease-in;
}

.modal-container1 {
    width: 90%;
    max-width: 650rpx;
    max-height: 80vh;
    background: linear-gradient(145deg, #ffffff, #f9fafb);
    border-radius: 24rpx;
    display: flex;
    flex-direction: column;
    animation: slideUp 0.3s ease-out;
    overflow: hidden;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.modal-header1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx;
    border-bottom: 1rpx solid #e5e7eb;
}

.modal-title-container1 {
    flex: 1;
    text-align: center;
}

.modal-title1 {
    font-size: 34rpx;
    font-weight: 700;
    color: #1f2937;
}

.close-button {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: #f3f4f6;
    transition: background 0.2s ease;
}

.close-button:hover {
    background: #e5e7eb;
}

.close-icon {
    width: 24rpx;
    height: 24rpx;
}

.modal-scroll1 {
    flex: 1;
    max-height: calc(80vh - 200rpx);
    overflow-y: auto;
}

.modal-body1 {
    padding: 32rpx;
}

.input-group1 {
    margin-bottom: 30rpx;
}

.input-label {
    font-size: 28rpx;
    font-weight: 500;
    color: #1f2937;
    margin-bottom: 12rpx;
    display: block;
}

.phone-input-container {
    position: relative;
    width: 90%;
    height: 75rpx;
    border: 2rpx solid #F16E00;
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    transition: all 0.2s ease;
    margin-bottom: 10rpx;
}

.phone-input {
    width: 100%;
    height: 90%;
    background: transparent;
    border: none;
    outline: none;
    font-size: 32rpx;
    color: #F16E00;
    font-weight: 500;
    padding: 0;
}

.phone-input:focus {
    border-color: #F16E00;
    box-shadow: 0 0 0 4rpx rgba(255, 121, 0, 0.1);
}

.phone-input::placeholder {
    color: #9ca3af;
    font-weight: 400;
}

.otp-container {
    position: relative;
    width: 100%;
    margin-top: 20rpx;
}

.otp-input {
    position: absolute;
    width: 100%;
    height: 88rpx;
    opacity: 0;
    z-index: 10;
}

.otp-boxes {
    display: flex;
    justify-content: space-between;
    gap: 12rpx;
    padding: 0 20rpx;
}

.otp-box {
    width: 64rpx;
    height: 64rpx;
    border: 2rpx solid #F16E00;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    transition: all 0.2s ease;
}

.otp-box.active {
    border-color: #e66b00;
    box-shadow: 0 0 0 4rpx rgba(255, 121, 0, 0.2);
}

.otp-digit {
    font-size: 32rpx;
    font-weight: 600;
    color: #1f2937;
}

.modal-footer {
    background: #fff;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20rpx 0;
}

.confirm-button {
    width: 100%;
    max-width: 300rpx;
    height: 75rpx;
    background: linear-gradient(135deg, #F16E00, #e66b00);
    color: #ffffff;
    border-radius: 18rpx;
    font-size: 32rpx;
    font-weight: 600;
    border: none;
    box-shadow: 0 6rpx 20rpx rgba(255, 121, 0, 0.4);
    transition: all 0.2s ease;
    padding: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 24%;
}

.confirm-button:hover {
    transform: translateY(-2rpx);
    box-shadow: 0 8rpx 24rpx rgba(255, 121, 0, 0.5);
}

.confirm-button:active {
    transform: scale(0.98);
}

@keyframes slideUp {
    from { transform: translateY(100rpx); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}