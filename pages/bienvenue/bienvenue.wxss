/* Style global de la page */
page {
  height: 100vh;
  font-family: 'Times New Roman', Times, serif;
}

/* Style du conteneur principal avec défilement */
.commencer {
  flex: 1;
  overflow-y: auto;
  margin-top: 5%;
  width: 750rpx;
  height: 1107rpx;
  display: block;
  box-sizing: border-box;
  animation: containerSlide 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Style du premier conteneur */
.conteneur_premier {
  position: relative;
  width: 100%;
  max-width: 750rpx;
  min-height: 410rpx;
  height: auto;
  display: block;
  box-sizing: border-box;
  left: 0rpx;
  top: -37rpx;
  margin: 0 auto;
  padding-bottom: 80rpx;
  margin-bottom: 40rpx;
  backdrop-filter: blur(10rpx);
  animation: cardFloat 1s ease-out 0.2s both;
}

/* Style du bouton principal */
.bouton {
  position: relative;
  width: min(412rpx, 55%);
  background: #FF7900;
  height: 48rpx;
  display: block;
  box-sizing: border-box;
  left: 50%;
  transform: translateX(-50%);
  top: 70rpx;
  border-radius: 15px;
  text-align: center;
  color: white;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 8rpx rgba(255, 121, 0, 0.3);
}

.bouton:hover {
  background: #e66b00;
  box-shadow: 0 6rpx 12rpx rgba(255, 121, 0, 0.4);
}

.bouton:active {
  box-shadow: 0 2rpx 4rpx rgba(255, 121, 0, 0.2);
  background: linear-gradient(135deg, #e66b00 0%, #FF7900 100%);
}

/* Style de la section description */
.description {
  position: relative;
  width: calc(100% - 70rpx);
  height: 53rpx;
  left: 35rpx;
  top: 110rpx;
  display: block;
  box-sizing: border-box;
  animation: slideInLeft 0.8s ease-out 0.4s both;
  font-weight: bold;
  font-size: 20px;
}

/* Style du texte de description */
.description_text {
  position: relative;
  width: calc(100% - 70rpx);
  left: 35rpx;
  top: 110rpx;
  display: block;
  box-sizing: border-box;
  line-height: 1.6;
  color: #666;
  font-size: 28rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: top;
  margin-bottom: 20rpx;
  animation: fadeInText 1s ease-out 0.6s both;
}

.description_text.collapsed {
  max-height: 120rpx;
  overflow: hidden;
  opacity: 0.9;
  transform: scaleY(0.95);
  position: relative;
}

.description_text.collapsed::after {
  content: '';
  position: absolute;
  height: 60rpx;
  pointer-events: none;
}

.description_text.expanded {
  max-height: none;
  height: auto;
  opacity: 1;
  transform: scaleY(1);
  animation: scaleIn 0.5s ease-out;
}

/* Style du bouton "voir plus" */
.voir_plus {
  position: relative;
  width: 238rpx;
  color: #FF7900;
  height: 48rpx;
  display: inline-block;
  box-sizing: border-box;
  cursor: pointer;
  left: 65rpx;
  top: 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.voir_plus:hover {
  color: #e66b00;
  transform: translateY(-2rpx);
}

.voir_plus:active {
  transform: translateY(0rpx) scale(0.98);
  background: rgba(255, 121, 0, 0.2);
}

/* Style du second conteneur */
.conteneur_second {
  position: relative;
  width: calc(100% - 40rpx);
