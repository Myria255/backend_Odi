/* Style de la note */
.note {
  position: relative;
  width: 278rpx;
  height: 37rpx;
  display: block;
  box-sizing: border-box;
  left: 123rpx;
  top: -90rpx;
  animation: scaleIn 0.5s ease-out;
}

/* Style de la description des avis */
.description_avis {
  position: relative;
  width: 632rpx;
  height: auto;
  min-height: 51rpx;
  display: block;
  box-sizing: border-box;
  left: 13rpx;
  top: -2rpx;
  overflow: hidden;
}

/* Style du texte tronqué */
.truncated-text {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  transition: all 0.3s ease-in;
}

/* Style du texte complet */
.full-text {
  display: block;
  line-height: 1.6;
  font-size: 28rpx;
  color: #666;
  animation: expandTextAvis 0.5s ease-out;
}

/* Style du bouton "voir plus" pour les avis */
.voir_plus_avis {
  position: relative;
  font-size: 26rpx;
  color: #FF7900;
  margin-top: 20rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(255, 121, 0, 0.1);
  display: inline-block;
  animation: fadeInUp 0.5s ease-out 0.6s both;
}

