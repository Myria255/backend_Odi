
 /* Grille de cards */
page{
    font-family: 'Times New Roman', Times, serif;
}
 .card-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  /* Card individuelle */
  .action-card {
    width: 48%;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0.1,0.1,0.1,0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .card-title {
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 10rpx;
    align-items: center;
    padding: 10px;
  }
  
  .card-text {
    font-size: 24rpx;
    text-align: center;
    margin-bottom: 20rpx;
  }

  .title{
    margin-top: 10px ;
    font-weight: bold;
    color: #F16E00;
  }
  .listParticipant{
    padding: 2%;
    font-weight: bold;
  }
  .nom{
    width: 70%;
  }

  .montant{
    width: 30%; 
    text-align: end;
  }

  /* Les nouvelles box 19:08*/
  
  .card {
    width: 650rpx;
    background :#F16E00 ;
    border-radius: 20rpx;
    padding: 30rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    gap: 25rpx;
    box-shadow: 0 8rpx 18rpx rgba(255, 121, 0, 0.5);
    margin: 0 auto;
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
  }
  
  .card-title {
    font-size: 32rpx;
    font-weight: bold;
    flex: 1;
    margin-right: 20rpx;
  }
  
  .counter {
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #F16E00;
    font-size: 28rpx;
    font-weight: bold;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.15);
  }
  
  .card-body {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    color: black;
    border-radius: 15rpx;
    padding: 30rpx;
    font-size: 30rpx;
    font-weight: bold;
    box-shadow: 0 3rpx 8rpx rgba(255,121,0,0.8);
    text-align: center;
    font-size: 30rpx;
  }
  


  .conteneur {
    margin: 20rpx 10px;
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .h1 {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    color: #333;
  }
  
  .scrollarea {
    max-height: 320rpx; 
    /* background-color: #f5f5f5; */
    border-radius: 18rpx;
    padding: 10rpx;
    box-sizing: border-box;
  }
  
  .listParticipant {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 10rpx;
    border-bottom: 1rpx solid #d9d9d9; 
  }
  
  .index-number {
    font-size: 28rpx;
    color: #666;
    width: 60rpx;
  }
  
  .nom {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .montant {
    font-size: 28rpx;
    font-weight: bold;
    color: #F16E00;
  }
  
  .empty {
    text-align: center;
    font-size: 28rpx;
    color: #888;
    padding: 40rpx 0;
  }
  
