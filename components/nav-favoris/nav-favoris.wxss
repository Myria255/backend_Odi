.nav-container {
  height: 88rpx; 
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); 
  position: sticky; 
  margin-top: 25px;
  z-index: 1000; 
  border-bottom: #ff77004b solid 1rpx;
  padding-top: env(safe-area-inset-top, 0); 
}

.nav-icon {
  width: 48rpx; 
  height: 48rpx;
  padding: 10rpx; 
  flex-shrink: 0; 
}
.nav-title {
  font-size: 34rpx; 
  font-weight: bold;
  color:#FF7900;
  flex-grow: 1; 
  text-align: center; 
  margin: 0 20rpx; 
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis; 
}

.search-input-wrapper {
  flex-grow: 1; 
  display: flex;
  align-items: center;
  background-color: #f5f5f5; 
  border-radius: 40rpx; 
  padding: 8rpx 20rpx;
  margin: 0 20rpx; 
  border: solid 0.5rpx #ff77004b;
}

.search-input {
  flex: 1; 
  height: 60rpx; 
  font-size: 28rpx;
  color: #333;
  background-color: transparent; 
 
  outline: none; 
}

.search-clear-icon {
  width: 32rpx; 
  height: 32rpx;
  margin-left: 10rpx;
  padding: 5rpx; 
}
