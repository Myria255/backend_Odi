/* components/bottomAnnonce/bottomAnnonce.wxss */
.conteneur {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 30rpx;
  left: 0;
}

.acheter,
.faireOffre {
  background-color: #FF7900;
  color: white;
  font-size: 32rpx;
  font-family: Arial, Helvetica, sans-serif;
  padding: 15rpx 30rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
  text-align: center;
  margin-right: 15rpx;
}

.boutique {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-right: 15rpx;
  background-color: #FF7900;
  border-radius: 10rpx;
}

.boutique image,
.conteneur > image {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0;
}

.conteneur > image:nth-of-type(1) {
  margin-right: 15rpx;
}