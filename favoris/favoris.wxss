page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: 'Avenir', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.favorite-scroll-view {
    flex: 1;
    overflow-y: auto;
    padding-top: 30rpx;
}
.favorite-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15rpx;
    margin-left: 25rpx;
}

.favorite-item {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
    min-height: 480rpx;
    width: 340rpx;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}

.favorite-image {
    width: 100%;
    height: 300rpx;
    object-fit: cover;
    border-radius: 16rpx 16rpx 0 0;
}

.item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 180rpx;
}

.photo-details {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    margin-bottom: 10rpx;
}

.product-description {
    font-size: 32rpx;
    font-weight: 700;
    margin-bottom: 6rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-price {
    font-size: 28rpx;
    font-weight: 600;
    color: #FF7900;
}

.photo-actions {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.heart-icon-fav {
    width: 40rpx;
    height: 40rpx;
    transition: transform 0.2s ease-in-out;
}

.heart-icon-fav:active {
    transform: scale(0.9);
}

.no-favorites-message {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #888;
    font-size: 32rpx;
    line-height: 1.6;
    padding: 40rpx;
}

.empty-heart-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 40rpx;
    opacity: 0.5;
}